<%= provide(:title, 'Activity-Page') %>
<% if !@microposts.nil? %>

  <h3>Blogs for <%=session[:user_email]%></h3>
      <table class="center">
        <% @microposts.each do |micropost| %>
          <tr>
            <td>
              <%= micropost.content %>
            </td>
            <td>
              <%= link_to 'Edit', edit_micropost_path(micropost) %>
               <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>

        <% end %>
        <td class="table-secondary"><%= link_to 'Add New Blog', new_micropost_path, name: "item", method: :get, remote: true %></td></tr>
        </table>
      <%= link_to 'Back', user_path(current_user), class: 'btn btn-secondary'%>
  <% else
    flash[:danger] = "Please Login"
    link_to login_path
  end %>
  <div id="blogs">
  </div>
  <br>
  <div id="newblog">
    render @microposts
  </div>
