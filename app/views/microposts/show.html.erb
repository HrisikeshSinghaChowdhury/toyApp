<%= provide(:title, session[:user_email]+'-Activity-Page') %>
<% if !@microposts.nil? %>

  <h1>Microposts</h1>
    <div>

      <table class="center">
        <% @microposts.each do |micropost| %>
          <tr>
            <td>
              <%= micropost.content %>
            </td>
            <td>
              <%= link_to 'Edit', edit_micropost_path(micropost) %>
               <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>

      </table>
   <%= link_to 'Back', user_path(current_user), class: 'btn btn-secondary'%>

<% else
  flash[:danger] = "Please Login"
  link_to login_path
end %>
