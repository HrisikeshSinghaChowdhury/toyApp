<%= provide(:title, 'Activity-Page') %>
<%= form_with(model: @micropost, name: "addblog", method: "post", local: false) do |form| %>
  <section>
    <div>

      <div>
        <div>

          <%= form.label :content %>
          <%= form.text_area :content %>

          <input type="hidden" name="id" value=<%=session[:user_id]%>>

          <br>
            <div class="actions">
             &nbsp;&nbsp;<%= form.submit "Create my Blog" %>
             <%= link_to 'Back', micropost_path(current_user), class: 'btn btn-secondary'%>

            </div>
        </div>
      </div>

    </div>
  </section>
<% end %>
