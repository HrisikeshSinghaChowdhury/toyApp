<%= provide(:title, 'Log in Page') %>
  <%= form_with(url: login_path, method: :post, local: true) do |f| %>
<section>
  <div>
    <div class="card" style="background-color: #a55 ;border-radius: 25px; height: 50%">
      <div class="container">
        <table>
         <tr>
           <td><%= f.label :email %></td>
           <td><%= f.email_field :email %></td>
         </tr>

         <tr>
           <td><%= f.label :password %></td>
           <td><%= f.password_field :password %></td>
         </tr>
        </table>
         <div class="actions">
          <%= f.submit "Log In" %>
          <%= link_to 'Back', root_path ,class: 'btn-secondary'%>
         </div>
      </div>
    </div>
  </div>
  </section>
<% end %>


