<%= provide(:title, 'Sign up') %>

<%= form_with(model: @user) do |f| %>
<div class="row mb-3">
  <%= f.label :name, class: "col-sm-1 col-form-label"%>
  <div class="col sm-10">
    <%= f.text_field :name %>
  </div>
</div>

<div class="row mb-3">
  <%= f.label :email, class: "col-sm-1 col-form-label"%>
  <div class="col sm-10">
    <%= f.email_field :email %>
  </div>
</div>

<div class="row mb-3">
  <%= f.label :password, class: "col-sm-1 col-form-label"%>
   <div class="col sm-10">
     <%= f.password_field :password %>
  </div>
</div>

<div class="row mb-3">
     <div class="col sm-10">
           <%= f.label :password_confirmation, "Confirmation", class: "col-sm-2 col-form-label"%>%>
           <%= f.password_field :password_confirmation %>
    </div>
  </div>


<div class="row mb-3">
     <div class="col sm-10">

            <%= f.label :"Upload Profile Photo" %>
            <%= f.file_field :avatar %>




            <%= f.submit "Create my account" %>
            <%= link_to 'Back', root_path ,class: 'btn-secondary'%>


</div>
  </div>



<% end %>


